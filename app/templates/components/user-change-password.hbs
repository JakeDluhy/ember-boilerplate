{{#unless passwordReset}}
  {{paper-input label="Old Password"
                type="password"
                class="old-password spec-old-password"
                value=oldPasswordValue
                required=true customValidation=passwordValidation
                event-enter=(action "changePasswordSubmit")}}
{{/unless}}
{{paper-input label="New Password"
              type="password"
              class="new-password spec-new-password"
              value=newPasswordValue
              required=true
              customValidation=passwordValidation
              event-enter=(action "changePasswordSubmit")}}
{{paper-input label="Confirm Password"
              type="password"
              class="new-password spec-confirm-password"
              value=confirmNewPasswordValue
              required=true
              customValidation=passwordValidation
              event-enter=(action "changePasswordSubmit")}}
{{#paper-button raised=true
                primary=true
                action="changePasswordSubmit"
                disabled=disableSubmit
                class="float-right spec-change-password-submit"}}Change{{/paper-button}}