{{#paper-select placeholder="What do you want to talk about?" model=selectedContactType class='spec-contact-type-select'}}
  {{#each contactTypes as |contactType|}}
    {{#paper-option value=contactType}}
      {{contactType}}
    {{/paper-option}}
  {{/each}}
{{/paper-select}}

{{paper-input label="Name"
              value=nameValue
              class="spec-name-value"
              event-enter=(action "formSubmit")}}
{{paper-input label="Email"
              value=emailValue
              required=true
              customValidation=emailValidation
              class='spec-email-value'
              event-enter=(action "formSubmit")}}
{{paper-input label="Comment"
              textarea=true
              value=commentValue
              required=true
              class='spec-comment-value'
              event-enter=(action "formSubmit")}}
{{#paper-button raised=true
                primary=true
                action="formSubmit"
                disabled=disableSubmit
                class="float-right spec-user-contact-submit"}}Submit{{/paper-button}}