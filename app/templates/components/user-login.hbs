{{paper-input label="Email"
              type="email"
              value=emailValue
              required=true
              customValidation=emailValidation
              class="spec-email-input"
              event-enter=(action "loginSubmit")}}
{{paper-input label="Password"
              type="password"
              value=passwordValue
              required=true
              customValidation=passwordValidation
              class="spec-password-input"
              event-enter=(action "loginSubmit")}}
<div class="bottom-container">
  <div class="float-left">
    {{#paper-checkbox checked=rememberMe class="no-margin-left spec-remember-me-checkbox"}}Remember Me{{/paper-checkbox}}
    {{#link-to 'users.forgot' class="forgot-link spec-forgot-link"}}Forgot your password?{{/link-to}}
  </div>
  {{#paper-button raised=true primary=true action="loginSubmit" disabled=disableSubmit class="float-right spec-user-login-submit" }}Log In{{/paper-button}}
</div>
<h5 class="center-text">No account? 
{{#if transitionToRoute}}
  {{#link-to 'users.register' class="spec-users-register"}}Register{{/link-to}}
{{else}}
  <a href="#" {{action 'transitionToReg'}} class="spec-transition-to-reg">Register</a>
{{/if}}
</h5>