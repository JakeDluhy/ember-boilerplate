{{paper-input label="First Name"
              value=firstNameValue
              class="spec-first-name"
              event-enter=(action "userSettingsSubmit")}}
{{paper-input label="Last Name"
              value=lastNameValue
              class="spec-last-name"
              event-enter=(action "userSettingsSubmit")}}
{{paper-input label="Email"
              type="email"
              value=emailValue
              required=true
              customValidation=emailValidation
              class="spec-email"
              event-enter=(action "userSettingsSubmit")}}
<div class="bottom-container">
  <div class="float-left">
    {{#paper-checkbox checked=mailingList
                      class="no-margin-left spec-mailing-list"}}Mailing list signup{{/paper-checkbox}}
  </div>
  {{#paper-button raised=true
                  primary=true
                  action="userSettingsSubmit"
                  disabled=disableSubmit
                  class="float-right spec-user-settings-submit"}}Update{{/paper-button}}
</div>